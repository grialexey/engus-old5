html {
	overflow-y: scroll;	/* fixing "jump horizontally" effect */
}
.m-hide {
	display: none !important;
}
.clear {
	clear: both;
}
.m-bold {
    font-weight: bold;
}
input, select, button, textarea {
    font-family: inherit;
    font-size: inherit;
    font-weight: inherit;
    color: inherit;
    line-height: inherit;
}

/* Clearfix. For modern browsers */
.clearfix:before,
.clearfix:after {
    content:"";
    display:table;
}

.clearfix:after {
    clear:both;
}

/* Clearfix. For IE 6/7 (trigger hasLayout) */
.clearfix {
    *zoom:1;
}