.header {
    background-color: #00AEEC;
    height: 69px;

    &__wrapper {
        container()
        position: relative;
    }

    &__logo {
        display: inline-block;
        vertical-align: top;
        font-size: 25px;
        line-height: 25px;
        margin: 15px 10px 15px 0;
        text-decoration: none;
        color: #00AEEC;
        background-color: #fff;
        padding: 7px 20px;
    }

    &__item {
        display: inline-block;
        vertical-align: top;
        font-size: 18px;
        line-height: 25px;
        margin: 15px 10px 15px 0;
        text-decoration: none;
        color: #fff;
        padding: 7px 14px;
        transition: background-color 0.1s;
        cursor: pointer;

        &.active, &:hover {
            background-color: #009dd9;
        }

        &--add {
            border: 1px solid #fff;
            line-height 23px;
            font-size: 23px;

            &.active {
                background-color: #fff;
                color: #00AEEC;
            }
        }

        &--toright {
            float: right;
            margin-right: 0;
            margin-left: 10px;
        }
    }
}