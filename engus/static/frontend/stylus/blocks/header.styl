.header {
    background-color: mainColor(1);

    &__wrapper {
        container()
        position: relative;
    }

    &__menu {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        flex-wrap: wrap;
        width: 100%;
        padding: 10px 0;

        &-item {
            flex: 0 0 auto;
            margin: 5px 2px 5px 0;

            &:last-child {
                margin-right: 0;
            }

            &--fill {
                flex: 1 1 auto;
                margin: 0;
            }
        }

        &-link {
            display: block;
            font-size: 18px;
            line-height: 25px;
            text-decoration: none;
            color: #fff;
            padding: 7px 10px;
            transition: background-color 0.1s, opacity 0.1s;
            cursor: pointer;

            &:hover:not(.active):not(.loading):not(&--logo) {
                background-color: rgba(0,0,0,0.1);
            }

            &.active {
                background-color: #fff;
                color: mainColor(1);
            }

            &--logo {
                font-size: 25px;
                line-height: 25px;
                text-decoration: none;
                color: mainColor(1);
                background-color: #fff;
                padding: 7px 15px;
            }

            &--add {
                border: 1px solid #fff;
                font-size: 23px;
                position: relative;
                padding: 6px 12px

                &.active {
                    background-color: #fff;
                    color: mainColor(1);
                }

                &.loading {
                    opacity: 0.7;
                    pointer: default;
                }
            }
        }
    }
}