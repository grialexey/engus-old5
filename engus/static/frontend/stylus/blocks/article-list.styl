.article-list {
    margin-top: 35px;

    &__item {
        width: 250px;
        display: inline-block;
        vertical-align: top;
        margin-bottom: 55px;

        &:nth-child(odd) {
            margin-right: 50px;
        }

        &-link {
            color: #000;
            text-decoration: none;
            display: block;
        }

        &-link:visited &-title {
            color: #555;
        }

        &-link:hover &-title {
            color: red;
        }

        &-title {
            font-size: 22px;
            line-height: 1.4;
            margin-bottom: 10px;
            font-weight: bold;
        }

        &-subtitle {
            font-size: 17px;
            color: #555;
            margin-bottom: 10px;
            transition: color 0.2s;
        }

        &:hover &-subtitle {
            color: #333;
        }

        &-image {
            margin-bottom: 15px;
            display: block;
        }

        &-infoline {
            font-size: 15px;
            color: #888;
            margin-bottom: 5px;
            transition: opacity 0.2s;
            opacity: 0.3;
        }

        &:hover &-infoline {
            opacity: 1;
        }

        &-rating {
            font-weight: bold;
            margin-right: 10px;

            &.m-positive {
                color: #0c0;

                &::before {
                    content: '+';
                }
            }

            &.m-negative {
                color: #f00;
            }
        }

        &-category {
            margin-right: 10px;
        }

        &-date {
            /*float: right;*/
        }
    }
}