.deck {
    margin: 25px 0 35px;

    &__deck {
        display: block;
        margin: 10px 0;
        max-width: 100%;
    }

    &__title {
        font-size: 27px;
        line-height: 1.3;
        margin: 15px 0 20px;
        font-weight: bold;
    }

    &__image {
        display: block;
        max-width: 100%;
        margin: 10px 0;
    }
}