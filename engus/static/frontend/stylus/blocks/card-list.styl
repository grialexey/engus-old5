.card-list {
    position: relative;

    &__overlay {
        position: absolute;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        background-color: #fff;
        opacity: 0.8;
        z-index: 5;
        display: none;
    }

    &__content {
        margin: 25px 0;
    }
}