.cards-goal {
    margin: 30px 0;

    .social-likes {
        margin-top: 35px;
        text-align: center;
    }

    &__title {
        text-align: center;
        font-size: 35px;
        margin: -23px 0 38px;
        border-bottom: 2px solid mainColor(0.35);

        &-word {
            color: mainColor(1);
            background-color: #fff;
            position: relative;
            bottom: -23px;
            padding: 0 20px;
        }
    }

    &__number {
        text-align: center;
        font-size: 50px;
        margin: 15px 0;
        font-weight: bold;
    }

    &__text {
        text-align: center;

    }

    &__per-day {
        color: #999;
        text-align: center;
        margin: 2px 0;
        font-size: 16px;
    }

    &__completed {
        text-align: center;
        font-size: 30px;
        color: #008000;
        margin: 15px 0;
    }

    &__not-active {
        text-align: center;
        font-size: 20px;
        color: #999;
        margin: 15px 0;
    }

    &__progress {
        text-align: center;
        font-weight: bold;
        margin: 25px 0 10px;
        font-size: 20px;
        color: #555;

        &-line {
            width: 100%;
            margin-top: 12px;
            border-bottom: 1px solid #ddd;

            &-fill {
                background-color: mainColor(1);
                height: 3px;
                position: relative;
                bottom: -1px;
            }
        }

        &-title {

        }
    }

    &__schedule {
        text-align: center;
        margin: 12px 0;
        color: #999;
    }

    &__signup {
        margin-top: 35px;
        display: block;
        width: 100%;
        box-sizing: border-box;
        border: 1px solid #8986e2;
        border-bottom-width: 2px;
        border-right-width: 2px;
        padding: 10px 15px;
        color: #555;
    }

    &__form {
        margin: 30px 0;

        &-title {
            font-size: 25px;
            margin: 10px 0;
        }


        .errorlist {
            color: red;
            margin-bottom: 5px;
        }

        label {
            color: #555;
        }

        input {
            display: block;
            width: 5em;
            margin-bottom: 15px;
        }

        input#id_number {
            width: 10em;
        }
    }
}