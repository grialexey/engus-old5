.profile {

    &__title {
        font-size: 25px;
        margin-bottom: 10px;
        font-weight: bold;
    }

    &__subtitle {
        font-size: 20px;
        margin: 35px 0 10px;
        font-weight: bold;
        color: #333;
        border-bottom: 1px solid mainColor(0.5);

        &-link {
            font-size: 16px;
            font-weight: normal;
            margin-left: 10px;
        }
    }

    &__statistics {

        &-item {
            margin: 7px 0;
        }
    }

    &__article-list {

        &-item {
            margin-bottom: 15px;
            border-left: 5px solid mainColor(0.3);
            box-sizing: border-box;
            padding-left: 10px;

            &-title {
                font-weight: bold;
            }
        }
    }
}