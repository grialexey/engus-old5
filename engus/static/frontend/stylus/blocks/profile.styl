.profile {

    &__title {
        font-size: 25px;
        margin-bottom: 10px;
        font-weight: bold;
    }

    &__subtitle {
        font-size: 20px;
        margin: 35px 0 10px;
        font-weight: bold;
        color: #333;
        border-bottom: 1px solid mainColor(0.5);

        &-link {
            font-size: 16px;
            font-weight: normal;
            margin-left: 10px;
        }
    }

    &__article-list {

        &-item {
            margin-bottom: 3px;
        }
    }
}