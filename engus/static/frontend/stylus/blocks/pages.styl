.pages {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    flex-wrap: nowrap;
    border: 1px solid #62b69b;
    border-bottom-width: 2px;
    border-right-width: 2px;
    margin: 15px 0 30px 0;
    box-sizing: border-box;

    &__item {
        flex: 1 1 auto;
        text-align: center;
        font-size: 15px;
        line-height: 39px;

        &--fastnav {
            flex: 0 0 110px;
        }
    }

    &__link {
        text-decoration: none;
        display: block;
        color: #62b69b;

        &:hover {
            background-color: rgba(98,182,155,0.1);
        }

        &.active {
            color: #fff;
            background-color: #62b69b;
        }
    }

    &__inactivelink {
        display: block;
        color: #ddd;
    }
}