.article {
    margin: 25px 0 35px;

    &__deck {
        display: block;
        margin: 10px 0;
        max-width: 100%;
    }

    &__title {
        font-size: 32px;
        line-height: 1.3;
        margin: 15px 0 20px;
        font-weight: bold;
    }

    &__heading2 {
        font-size: 25px;
        line-height: 1.3;
        margin: 20px 0 15px;
        font-weight: bold;
        text-align: center;
    }

    &__image {
        display: block;
        max-width: 100%;
        height: auto;
        margin: 10px 0;
    }

    &__likes {
        margin: 25px 0;

        &-title {
            margin: 5px 0;
        }
    }

    &__copy-btn {
        display: block;
        width: 100%;
        box-sizing: border-box;
        background-color: #fff;
        border: 1px solid #8986e2;
        border-bottom-width: 2px;
        border-right-width: 2px;
        padding: 10px 15px;
        color: #555;
        margin-bottom: 25px;

        &:disabled {
            color: #ccc;
        }

        &.m-active {
            color: #8986e2;
            cursor: pointer;
            text-align: center;

            &:active {
                background-color: #8986e2;
                color: #fff;
            }
        }
    }
}