.article {
    margin: 25px 0 35px;

    &__deck {
        display: block;
        margin: 10px 0;
        max-width: 100%;
    }

    &__title {
        font-size: 27px;
        line-height: 1.3;
        margin: 15px 0 20px;
        font-weight: bold;
    }

    &__heading2 {
        font-size: 20px;
        line-height: 1.3;
        margin: 20px 0 15px;
        font-weight: bold;
    }

    &__image {
        display: block;
        max-width: 100%;
        height: auto;
        margin: 10px 0;
    }
}