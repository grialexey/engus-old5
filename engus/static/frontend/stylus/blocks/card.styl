.card {
    overflow: hidden;
    background-color: #fff;
    border: 1px solid #00c3ff;
    border-right-width: 2px;
    border-bottom-width: 2px;
    margin: 10px 0;
    box-sizing: border-box;
    position: relative;

    &__content {
        padding: 11px 0;

        &.editable {
            cursor: pointer;
        }
    }

    &__top {
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        position: relative;
    }

    &__front, &__back {
        line-height: 22px;
        min-height: 22px;
        flex: 0 0 50%;
        /*vertical-align: top;*/
        box-sizing: border-box
    }

    &__front {
        padding-left: 22px;
        padding-right: 10px
        font-size: 20px;

        &-word {
            font-weight: bold;
            margin-right: 7px;
        }

        &-pron {
            color: #999;
            font-size: 18px;
            white-space: nowrap;

            &.with-audio {
                cursor: pointer;

                &:hover {
                    color: blue;
                }
            }
        }
    }

    &__back {
        padding-right: 22px;
        font-size: 18px;
        color: #333;
    }

    &__level {
        position: absolute;
        font-weight: bold;
        font-size: 16px;
        top: 5px;
        right: 6px;
        z-index: 5;

        &.m-repeated-today {
            opacity: 0.5;
        }

        &.level1 {
            color: #f00;
        }

        &.level2 {
            color: #080;
        }

        &.level3 {
            color: #080;
        }

        &.level4 {
            color: #080;
        }

        &.level5 {
            color: #00f;
        }
    }

    &__example {
        font-size: 15px;
        line-height: 17px;
        color: #aaa;
        padding: 0;
        margin: 11px 22px 0;
    }

    &__audio {
        display: none;
    }

    &__image {
        max-width: 100%;
        height: auto;
        display: block;
        margin: 5px auto 15px;
        padding: 0 22px;
    }

    &__overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #fff;
        line-height: 49px;
        text-align: center;
        font-size: 20px;
        opacity: 0.5;
        align-items: center;
        justify-content: center;
        z-index: 10;
        display: none;
        box-sizing: border-box;

        &.m-active {
            display: flex;
        }

        &.m-error {
            color: red;
            opacity: 1;
        }

        &.m-left, &.m-right {
            cursor: pointer
            font-size: 16px;
            color: #ccc;
            transition: color 0.2s;
            text-align: left;
            justify-content: flex-start;
            opacity: 1;
            z-index: 3;

            &:hover {
                color: #555;
            }
        }

        &.m-left {
            right: 50%;
            padding-left: 22px;
        }

        &.m-right {
            left: 50%;
        }
    }

    &__infoline {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        flex-wrap: wrap;
        width: 100%;
        padding: 7px 22px;
        margin: 0;
        box-sizing: border-box;
        /*border-top: 1px solid #ddd;*/
        background-color: rgba(0,195,255,0.1);

        &-item {
            flex: 0 0 auto;
            font-size: 13px;
            line-height: 1.4;
            color: #333;
        }
    }

    &__controls {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        flex-wrap: wrap;
        width: 100%;
        padding: 5px 22px;
        box-sizing: border-box;
        /*border-top: 1px solid rgba(0,195,255,0.3);*/
        background-color: rgba(0,195,255,0.2);

        &--level-change {
            justify-content: space-around;
            padding-left: 0;
            padding-right: 0;
        }

        &-item {
            flex: 0 0 auto;
            margin: 3px 0;

            &--single {
                margin-left: auto;
                margin-right: auto;
            }
        }
    }

    &__button {
        color: #fff;
        font-size: 16px;
        padding: 6px 11px 5px 12px;
        line-height: 1;
        display: block;
        cursor: pointer;
        border: 1px solid #888;
        border-bottom-width: 2px;
        border-right-width: 2px;
        background-color: #fff;

        &--add {
            border-color: green;
            color: green;

            &:active, &.active {
                color: #fff;
                background-color: green;
            }
        }

        &--remove {
            border-color: red;
            color: green;

            &:active, &.active {
                color: #fff;
                background-color: red;
            }
        }

        &--edit {
            border-color: orange;
            color: orange;

            &:active, &.active {
                color: #fff;
                background-color: orange;
            }
        }

        &--forget {
            border-color: #ff6464;
            color: #ff6464;

            &:active, &.active {
                color: #fff;
                background-color: #ff6464;
            }
        }

        &--learned {
            border-color: #64c864;
            color: #64c864;

            &:active, &.active {
                color: #fff;
                background-color: #64c864;
            }
        }

        &:disabled {
            background-color: #fff;
            border-color: #aaa;
            color: #ccc;
            cursor: default;

            &:active {
                background-color: #fff;
                color: #ccc;
            }
        }
    }

    &__form {

        &--create {
            position: absolute;
            top: 80px;
            left: 15px;
            right: 15px;
            margin: 0;
            z-index: 200;
        }


        &-input {
            display: block;
            width: 100%;
            line-height 24px;
            height: 24px;
            padding: 0;
            outline: none;
            border: none;
            background-color: transparent;
            border-bottom: 1px solid rgba(0,195,255,0.5);

            &[name=front] {
                font-weight: bold;
            }

            &[name=example] {
                resize: vertical;
                height: auto;
                line-height: inherit;
                padding: 4px 0;
                margin-top: -4px;

                &::-webkit-input-placeholder {
                    font-size: inherit;
                }

                &:-moz-placeholder { /* Firefox 18- */
                    font-size: inherit;
                }

                &::-moz-placeholder {  /* Firefox 19+ */
                    font-size: inherit;
                }

                &:-ms-input-placeholder {
                    font-size: inherit;
                }
            }
        }


        ::-webkit-input-placeholder {
            font-weight: normal;
            font-size: 16px;
            opacity: 1;
            color: #aaa;
        }

        :-moz-placeholder { /* Firefox 18- */
            font-weight: normal;
            font-size: 16px;
            opacity: 1;
            color: #aaa;
        }

        ::-moz-placeholder {  /* Firefox 19+ */
            font-weight: normal;
            font-size: 16px;
            opacity: 1;
            color: #aaa;
        }

        :-ms-input-placeholder {
            font-weight: normal;
            font-size: 16px;
            opacity: 1;
            color: #aaa;
        }
    }

}