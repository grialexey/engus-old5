.card {
    overflow: hidden;
    background-color: #fff;
    border: 1px solid #00c3ff;
    border-right-width: 2px;
    border-bottom-width: 2px;
    margin: 10px 0;
    box-sizing: border-box;
    position: relative;

    &__content {
        cursor: pointer;
    }

    &__top {
        padding: 11px 0;
    }

    &__front, &__back {
        line-height: 22px;
        display: inline-block;
        width: 50%;
        vertical-align: top;
        box-sizing: border-box
    }

    &__front {
        padding-left: 22px;
        padding-right: 10px
        font-size: 20px;

        &-word {
            font-weight: bold;
            margin-right: 7px;
        }

        &-pron {
            color: #999;
            font-size: 18px;
            white-space: nowrap;
        }
    }

    &__back {
        padding-right: 22px;
        font-size: 18px;
        color: #333;
    }

    &__example {
        font-size: 15px;
        color: #777;
        margin: 10px 0;
    }

    &__image {
        max-width: 100%;
        height: auto;
        display: block;
        margin: 5px auto 15px;
        padding: 0 22px;
    }

    &__modeswitch {
        display: block;
        margin: 25px 0;
        transition: border 0.2s;
        border: 1px solid #000;
        border-bottom-width: 2px;
        border-right-width: 2px;

        &.learning {
            border-color: orange;
        }

        &-input {
            display: none;
        }

        &-input#id_learning:checked+&-label {
            background-color: orange;
            color: #fff;
        }

        &-input#id_repeating:checked+&-label {
            background-color: green;
            color: #fff;
        }

        &-label {
            display: inline-block;
            width: 50%;
            text-align: center;
            padding: 10px 0;
            /*font-weight: bold;*/
            font-size: 18px;
            transition: background-color 0.2s;
            cursor: pointer;
            color: #555;

            &:hover {
                background-color: #f7f7f7;
            }
        }
    }

    &__overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #fff;
        line-height: 49px;
        text-align: center;
        font-size: 20px;
        display: none;
    }

    &__infoline {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        flex-wrap: wrap;
        width: 100%;
        padding: 7px 22px;
        margin: 0;
        box-sizing: border-box;
        /*border-top: 1px solid #ddd;*/
        background-color: rgba(0,195,255,0.1);

        &-item {
            flex: 0 0 auto;
            font-size: 13px;
            line-height: 1.4;
            color: #333;
        }
    }

    &__controls {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        flex-wrap: wrap;
        width: 100%;
        padding: 5px 22px;
        box-sizing: border-box;
        /*border-top: 1px solid rgba(0,195,255,0.3);*/
        background-color: rgba(0,195,255,0.2);


        &-item {
            flex: 0 0 auto;
            margin: 3px 0;

            &--single {
                margin-left: auto;
                margin-right: auto;
            }
        }
    }

    &__button {
        color: #fff;
        font-size: 16px;
        padding: 6px 11px 5px 12px;
        line-height: 1;
        display: block;
        cursor: pointer;
        border: 1px solid #888;
        border-bottom-width: 2px;
        border-right-width: 2px;
        background-color: #fff;

        &--add {
            border-color: green;
            color: green;

            &:active, &.active {
                color: #fff;
                background-color: green;
            }
        }

        &--remove {
            border-color: red;
            color: green;

            &:active, &.active {
                color: #fff;
                background-color: red;
            }
        }

        &--edit {
            border-color: orange;
            color: orange;

            &:active, &.active {
                color: #fff;
                background-color: orange;
            }
        }

        &--forget {
            border-color: #ff6464;
            color: #ff6464;

            &:active, &.active {
                color: #fff;
                background-color: #ff6464;
            }
        }

        &--learned {
            border-color: #64c864;
            color: #64c864;

            &:active, &.active {
                color: #fff;
                background-color: #64c864;
            }
        }
    }

    &--form {
        position: absolute;
        top: 80px;
        left: 15px;
        right: 15px;
        margin: 0;
        z-index: 10;

        ::-webkit-input-placeholder {
            font-weight: normal;
            font-size: 18px;
            opacity: 1;
            color: #aaa;
        }

        :-moz-placeholder { /* Firefox 18- */
            font-weight: normal;
            font-size: 18px;
            opacity: 1;
            color: #aaa;
        }

        ::-moz-placeholder {  /* Firefox 19+ */
            font-weight: normal;
            font-size: 18px;
            opacity: 1;
            color: #aaa;
        }

        :-ms-input-placeholder {
            font-weight: normal;
            font-size: 18px;
            opacity: 1;
            color: #aaa;
        }
    }

    &__form {

        &-input {
            display: block;
            height: 100%;
            width: 100%;
            line-height 24px;
            padding: 0;
            outline: none;
            border: none;
            background-color: transparent;

            &[name=front] {
                font-size: 20px;
                font-weight: bold;
            }

            &[name=back] {
                font-size: 18px;
                color: #333;
            }
        }
    }

}