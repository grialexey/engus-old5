.card {
    overflow: hidden;
    background-color: #fff;
    border: 1px solid #00c3ff;
    border-right-width: 2px;
    border-bottom-width: 2px;
    margin: 10px 0;
    box-sizing: border-box;
    position: relative;

    &__content {

        &.editable {
            cursor: pointer;
        }
    }

    &__top {
        padding: 11px 0;
    }

    &__front, &__back {
        line-height: 22px;
        display: inline-block;
        width: 50%;
        vertical-align: top;
        box-sizing: border-box
    }

    &__front {
        padding-left: 22px;
        padding-right: 10px
        font-size: 20px;

        &-word {
            font-weight: bold;
            margin-right: 7px;
        }

        &-pron {
            color: #999;
            font-size: 18px;
            white-space: nowrap;

            &.with-audio {
                cursor: pointer;

                &:hover {
                    color: #33d147;
                }
            }
        }
    }

    &__back {
        padding-right: 22px;
        font-size: 18px;
        color: #333;
    }

    &__example {
        font-size: 15px;
        line-height: 17px;
        color: #777;
        padding: 0;
        margin: 3px 22px 10px;
    }

    &__audio {
        display: none;
    }

    &__image {
        max-width: 100%;
        height: auto;
        display: block;
        margin: 5px auto 15px;
        padding: 0 22px;
    }

    &__overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #fff;
        line-height: 49px;
        text-align: center;
        font-size: 20px;
        opacity: 0.5;
        display: flex;
        align-items: center;
        justify-content: center;

        &.left, &.right {
            cursor: pointer
            font-size: 16px;
            color: #ddd;
            transition: color 0.2s;
            text-align: left;
            justify-content: flex-start;
            opacity: 1;

            &:hover {
                color: #555;
            }
        }

        &.left {
            right: 50%;
        }

        &.right {
            left: 50%;
        }
    }

    &__infoline {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        flex-wrap: wrap;
        width: 100%;
        padding: 7px 22px;
        margin: 0;
        box-sizing: border-box;
        /*border-top: 1px solid #ddd;*/
        background-color: rgba(0,195,255,0.1);

        &-item {
            flex: 0 0 auto;
            font-size: 13px;
            line-height: 1.4;
            color: #333;
        }
    }

    &__controls {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        flex-wrap: wrap;
        width: 100%;
        padding: 5px 22px;
        box-sizing: border-box;
        /*border-top: 1px solid rgba(0,195,255,0.3);*/
        background-color: rgba(0,195,255,0.2);

        &--repeating {
            justify-content: space-around;
            padding-left: 0;
            padding-right: 0;
        }

        &-item {
            flex: 0 0 auto;
            margin: 3px 0;

            &--single {
                margin-left: auto;
                margin-right: auto;
            }
        }
    }

    &__button {
        color: #fff;
        font-size: 16px;
        padding: 6px 11px 5px 12px;
        line-height: 1;
        display: block;
        cursor: pointer;
        border: 1px solid #888;
        border-bottom-width: 2px;
        border-right-width: 2px;
        background-color: #fff;

        &--add {
            border-color: green;
            color: green;

            &:active, &.active {
                color: #fff;
                background-color: green;
            }
        }

        &--remove {
            border-color: red;
            color: green;

            &:active, &.active {
                color: #fff;
                background-color: red;
            }
        }

        &--edit {
            border-color: orange;
            color: orange;

            &:active, &.active {
                color: #fff;
                background-color: orange;
            }
        }

        &--forget {
            border-color: #ff6464;
            color: #ff6464;

            &:active, &.active {
                color: #fff;
                background-color: #ff6464;
            }
        }

        &--learned {
            border-color: #64c864;
            color: #64c864;

            &:active, &.active {
                color: #fff;
                background-color: #64c864;
            }
        }
    }

    &__form {

        &--create {
            position: absolute;
            top: 80px;
            left: 15px;
            right: 15px;
            margin: 0;
            z-index: 10;
        }


        &-input {
            display: block;
            width: 100%;
            line-height 24px;
            height: 24px;
            padding: 0;
            outline: none;
            border: none;
            background-color: transparent;
            border-bottom: 1px solid rgba(0,195,255,0.5);

            &[name=front] {
                font-weight: bold;
            }

            &[name=example] {
                resize: vertical;
                height: auto;
                line-height: inherit;
                padding: 4px 0;
                margin-top: -4px;
            }
        }


        ::-webkit-input-placeholder {
            font-weight: normal;
            font-size: 16px;
            opacity: 1;
            color: #aaa;
        }

        :-moz-placeholder { /* Firefox 18- */
            font-weight: normal;
            font-size: 16px;
            opacity: 1;
            color: #aaa;
        }

        ::-moz-placeholder {  /* Firefox 19+ */
            font-weight: normal;
            font-size: 16px;
            opacity: 1;
            color: #aaa;
        }

        :-ms-input-placeholder {
            font-weight: normal;
            font-size: 16px;
            opacity: 1;
            color: #aaa;
        }
    }

}