.card {
    background-color: #fff;
    border: 1px solid #00c3ff;
    border-right-width: 2px;
    border-bottom-width: 2px;
    /*border-bottom: 2px solid #00c3ff;*/
    /*border-right: 2px solid #00c3ff;*/
    /*border-top: 1px solid rgba(0,195,255,0.7);*/
    /*border-left: 1px solid rgba(0,195,255,0.7);*/
    margin: 10px 0;
    padding: 0 23px 0 24px;
    box-sizing: border-box;
    /*text-align: center;*/

    &__top {
        margin: 11px 0;
    }

    &__front, &__back {
        line-height: 24px;
        display: inline-block;
        width: 50%;
        vertical-align: top;

    }

    &__front {
        width: 45%;
        margin-right: 5%;
        font-size: 20px;

        &-word {
            font-weight: bold;
            margin-right: 5px;
        }

        &-pron {
            color: #777;
        }
    }

    &__back {
        font-size: 18px;
        color: #333;
    }

    &__example {
        font-size: 15px;
        color: #777;
        margin: 10px 0;
    }

    &__image {
        max-width: 100%;
        height: auto;
        display: block;
        margin: 15px auto 15px;
    }

    &__modeswitch {
        display: block;
        margin: 25px 0;
        transition: border 0.2s;
        border: 1px solid #000;
        border-bottom-width: 2px;
        border-right-width: 2px;

        &.learning {
            border-color: orange;
        }

        &-input {
            display: none;
        }

        &-input#id_learning:checked+&-label {
            background-color: orange;
            color: #fff;
        }

        &-input#id_repeating:checked+&-label {
            background-color: green;
            color: #fff;
        }

        &-label {
            display: inline-block;
            width: 50%;
            text-align: center;
            padding: 10px 0;
            /*font-weight: bold;*/
            font-size: 18px;
            transition: background-color 0.2s;
            cursor: pointer;
            color: #555;

            &:hover {
                background-color: #f7f7f7;
            }
        }
    }

    &__overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #fff;
        line-height: 49px;
        text-align: center;
        font-size: 20px;
    }

    &--form {
        position: absolute;
        top: 80px;
        left: 15px;
        right: 15px;
        margin: 0;
        outline: 7px solid #fff;

        input {
            display: block;
            height: 100%;
            width: 100%;
            line-height 24px;
            padding: 0;
            outline: none;
            border: none;
            background-color: transparent;

            &[name=front] {
                font-size: 20px;
                font-weight: bold;
            }

            &[name=back] {
                font-size: 18px;
                color: #333;
            }


        }

        input[type=submit] {
            display: none;
        }

        ::-webkit-input-placeholder {
            font-weight: normal;
            font-size: 18px;
            opacity: 1;
            color: #aaa;
        }

        :-moz-placeholder { /* Firefox 18- */
            font-weight: normal;
            font-size: 18px;
            opacity: 1;
            color: #aaa;
        }

        ::-moz-placeholder {  /* Firefox 19+ */
            font-weight: normal;
            font-size: 18px;
            opacity: 1;
            color: #aaa;
        }

        :-ms-input-placeholder {
            font-weight: normal;
            font-size: 18px;
            opacity: 1;
            color: #aaa;
        }
    }

}